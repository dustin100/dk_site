{
  "name": "html",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "sass": "^1.93.3",
    "vite": "^7.1.12"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"sass --watch src/scss/main.scss:src/css/main.css --style=compressed\"",
    "build:css": "sass src/scss/main.scss:src/css/main.css --style=compressed",
    "build": "npm run build:css && vite build",
    "preview": "vite preview --open"
  }
}
